COMPOSE_PROJECT_NAME=radio_crestin

SECRET_KEY=your_secret_key
DEBUG=true
ALLOWED_HOSTS=
CSRF_TRUSTED_ORIGINS=

# GraphQL CORS Configuration (using custom cors_exempt decorator)
# To allow all origins (not recommended for production):
# GRAPHQL_CORS_ALLOW_ALL_ORIGINS=true
# To allow specific origins (recommended):
# GRAPHQL_CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com,http://localhost:3000

DATABASE_URL=postgres://postgres:postgrespassword@postgres:5432/postgres
REDIS_BROKER_URL=redis://:redispassword@redis:6379
SETUP_SCHEDULED_TASKS=true

POSTGRES_PASSWORD=postgrespassword
REDIS_PASSWORD=redispassword

AWS_ACCESS_KEY_ID=XXXX
AWS_SECRET_ACCESS_KEY=XXXX
AWS_STORAGE_BUCKET_NAME=radio-crestin
AWS_S3_CUSTOM_DOMAIN=radio-crestin.s3.amazonaws.com

# PostHog Configuration
POSTHOG_API_KEY=XXXXX
POSTHOG_HOST=https://eu.i.posthog.com
POSTHOG_PROJECT_ID=78690

# Radio Crestin Component Configuration
## Web Service
RADIO_CRESTIN_WEB_ENABLED=true
RADIO_CRESTIN_WEB_REPLICAS=1
RADIO_CRESTIN_WEB_IMAGE_REPOSITORY=radio-crestin/web
RADIO_CRESTIN_WEB_IMAGE_TAG=latest

## Priority Worker Service
RADIO_CRESTIN_PRIORITY_WORKER_ENABLED=true
RADIO_CRESTIN_PRIORITY_WORKER_REPLICAS=1
RADIO_CRESTIN_PRIORITY_WORKER_IMAGE_REPOSITORY=radio-crestin/web
RADIO_CRESTIN_PRIORITY_WORKER_IMAGE_TAG=latest

## Worker Service
RADIO_CRESTIN_WORKER_ENABLED=true
RADIO_CRESTIN_WORKER_REPLICAS=1
RADIO_CRESTIN_WORKER_IMAGE_REPOSITORY=radio-crestin/web
RADIO_CRESTIN_WORKER_IMAGE_TAG=latest

## Database Configuration
RADIO_CRESTIN_DATABASE_HOST=postgres
RADIO_CRESTIN_DATABASE_PORT=5432
RADIO_CRESTIN_DATABASE_NAME=postgres
RADIO_CRESTIN_DATABASE_USERNAME=postgres
RADIO_CRESTIN_DATABASE_PASSWORD=postgrespassword

## Redis Configuration
RADIO_CRESTIN_REDIS_HOST=redis
RADIO_CRESTIN_REDIS_PORT=6379
RADIO_CRESTIN_REDIS_PASSWORD=redispassword

## Ingress Configuration
RADIO_CRESTIN_INGRESS_ENABLED=false
RADIO_CRESTIN_INGRESS_HOST=
RADIO_CRESTIN_INGRESS_CLASS_NAME=nginx
RADIO_CRESTIN_INGRESS_TLS_SECRET=

## Deployment Configuration
RADIO_CRESTIN_SLUG=radio-crestin
RADIO_CRESTIN_NAMESPACE=radio-crestin
